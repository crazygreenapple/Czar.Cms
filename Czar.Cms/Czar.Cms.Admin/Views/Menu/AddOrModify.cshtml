@using Czar.Cms.Models
@model List<ManagerMenu>
@{
    ViewData["Title"] = "添加编辑菜单";
}

<form class="layui-form layui-form-pane" style="width:90%;">
    @Html.AntiForgeryToken()
    @Html.Hidden("MenuID")
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">调用别名</label>
        <div class="layui-input-block">
            <input type="text" name="MenuName" class="layui-input MenuName" lay-verify="required|MenuName" placeholder="只允许字母数字下划线">
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">显示名称</label>
        <div class="layui-input-block">
            <input type="text" name="ShowName" class="layui-input ShowName" lay-verify="required" placeholder="请输入显示名称">
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">上级菜单</label>
        <div class="layui-input-block">
            <select name="ParentId" class="PID" lay-filter="PID">
                <option value="0">无上级菜单</option>
                @foreach (var item in Model)
                {
                    <option value="@item.MenuID">@item.ShowName</option>

                }
            </select>
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">菜单图标</label>
        <div class="layui-input-block">
            <input type="text" name="ImgUrl" class="layui-input ImgUrl" placeholder="请输入菜单图标">
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">链接地址</label>
        <div class="layui-input-block">
            <input type="text" name="LinkUrl" class="layui-input LinkUrl" placeholder="请输入链接地址">
        </div>
    </div>

    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">排序数字</label>
        <div class="layui-input-block">
            <input type="text" name="OrderBy" class="layui-input OrderBy" value="99" lay-verify="required" placeholder="请输入排序数字">
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <div class="layui-input-block">
            <button class="layui-btn layui-btn-sm" lay-submit="" lay-filter="addMenu">确定</button>
            <button type="reset" class="layui-btn layui-btn-sm layui-btn-primary">重置</button>
        </div>
    </div>
</form>
@section Scripts{
    <script type="text/javascript" src="~/layui/layui.js"></script>
    <script src="~/js/pages/menuAdd.js?_=@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>
}